#:kivy 1.2.0
<GameLayout>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        ScreenManager:
            id: _screen_manager
            Screen:
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                RelativeLayout:
                    GridLayout:
                        id: gameArea
                        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
                        pos: (self.parent.width - self.width) / 3, (self.parent.height - self.height) / 3
                        size_hint: None, None
                        size: min(self.parent.width, self.parent.height) / 1.15, min(self.parent.width, self.parent.height) / 1.15
                        padding: 20
                        
                        canvas:
                            Color:
                                rgba: 0, .2, 1, 1
                            BoxShadow:
                                inset: True
                                pos: self.pos
                                size: self.size
                                offset: 0, 0
                                border_radius: 25, 25, 25, 25
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, .1
                    Button:
                        text: '3 x 3'
                        on_press: root.change_grid(3, 3, 3)
                    Button:
                        text: '6 x 6'
                        on_press: root.change_grid(6, 6, 4)
                    Button:
                        text: '9 x 9'
                        on_press: root.change_grid(9, 9, 5)
                    Button:
                        text: '11 x 11'
                        on_press: root.change_grid(11, 11, 6)
                    Button:
                        text: 'Limpar'
                        on_press: root.restart()


<ButtonPlay@ButtonBehavior+Label>:
    canvas:
        Color:
            rgba: .1, .3, .4, 1
        Line:
            width: min(self.width, self.height) / 30
            rounded_rectangle:(self.x, self.y, self.width, self.height, self.width / 15, self.width / 15, self.width / 15, self.width /15)